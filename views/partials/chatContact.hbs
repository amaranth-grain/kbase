{{#each contact}}
    <form action="/chat" method="POST">
        <div class="contactContainer" id={{this.id}} onclick='document.getElementById("loadConversationButton").click()'>
            <div class="contactImg"><img src={{this.imageurl}}></div>
            <div class="contactName">{{this.name}}<div>{{this.about}}</div></div>
            <div class="contactDate">Sept 18</div>
        </div>
        <input type="hidden" name="convId" value={{this.conversation_id}}>
        <input type="submit" id="loadConversationButton"> 
    </form>
{{/each}}