{{#each discussion}}
    <div class="cardDiscussion">
        <img class="profilePic" src="{{this.imageurl}}">
        <div class="cardDiscussionText">
            <div class="cardDiscussionHeader">
                <span class="subjectDiscussion">{{this.subject}}</span>
                <button class="btnInverse disabled">{{this.tag}}</button>
            </div>
            <p>{{this.details}}</p>
            <div class="cardDiscussionFooter">
                <p class="dateDiscussion">{{this.date}}</p>
            </div>
            {{>cardReply}}          
        </div>
    </div>
    <div>
        <form action="/discussion/newReply" method="POST">
            <div class="replyContainer">
                <textarea name="replyInput" class="replyInput" required placeholder="Add your reply..."></textarea>
                <div><input type="hidden" name="discId" value="{{this.discussion_id}}" /></div>
                <div><input type="submit" class="sendReply" value="Comment"></div>
            </div>
        </form>
    </div>
{{/each}}