<div id="chatContainer">
    <div id="allContacts">
        {{#each contact}}
            <form action="/chat/loadConversation" method="POST">
                <div class="contactContainer" id={{this.id}} onclick='document.getElementById("loadConversationButton").click()'>
                    <div class="contactImg"><img src={{this.imageurl}}></div>
                    <div class="contactName">{{this.name}}<div>{{this.about}}</div></div>
                    <div class="contactDate">Sept 18</div>
                </div>
                <input type="hidden" name="contactId" value={{this.id}}>
                <input type="submit" id="loadConversationButton"> 
            </form>

        {{/each}}
    </div>


    <div id="rightSide">
        <div id="conversation">
            {{#each message}}
                <div class="message">
                    <h4><span>{{this.date}}</span></h4>
                    <div class="contactContainer">
                        <div class="contactImg"><img src="{{this.imageurl}}"></div>
                        <div class="chatCenter">
                            <div>
                                <div class="contactName"><b>{{this.name}}</b></div>
                                &#x2022;
                                <div class="messageTime">{{this.time}}</div>
                            </div>
                            <div class="messageData">
                                {{this.message}}
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
        <form action="/chat/newMessage" method="POST">
            <textarea name="messageInput" id="messageInput" required placeholder="Write a message..."></textarea>
            <input type="hidden" name="convId" value="{{convId}}"/>
            <input type="hidden" name="sender" value="{{sender}}"/>
            <input type="submit" id="sendMsg" value="Send">
        </form>

    </div>
    
</div>